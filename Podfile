platform :ios, '11.0'
workspace 'Kleene'

target 'AppleMusic' do
	project 'Apple Music/Apple Music'
	use_frameworks!

	pod 'SwiftLint'
end

target 'Deezer' do
	project 'Deezer/Deezer'
	use_frameworks!

	pod 'SwiftLint'
end

target 'Essentials' do
	project 'Essentials/Essentials'
	use_frameworks!

	pod 'SwiftLint'
end

target 'Spotify' do
	project 'Spotify/Spotify'
	use_frameworks!

	pod 'SwiftLint'
end

target 'Kleene' do
	project 'Kleene/Kleene'
	# Comment the next line if you're not using Swift and don't want to use dynamic frameworks
	use_frameworks!

	# Pods for Kleene
	pod 'AlamofireImage'
	pod 'SwiftLint'

	target 'KleeneUITests' do
		pod 'AlamofireImage'
		pod 'SwiftLint'
	end
end
